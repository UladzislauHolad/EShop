@model EShop.App.Web.Models.CategoryListViewModel

@{
    ViewBag.Title = "CategoryList";
    Layout = "_Layout";
}

<div class="col-md-10">
    <h3>Category List</h3>
    <table class="table table-striped">
        <thead>
            <tr><th>Name</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (EShop.App.Web.Models.CategoryViewModel c in Model.Categories)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>
                        <div class="btn-toolbar pull-right" role="toolbar">
                            <div class="btn-group" role="group"><a class="btn btn-warning" asp-action="Edit" asp-route-id="@c.CategoryId"><span class="glyphicon glyphicon-pencil"></span></a></div>
                            <div class="btn-group" role="group"><a class="btn btn-danger" asp-action="Delete" asp-route-id="@c.CategoryId"><span class="glyphicon glyphicon-trash"></span></a></div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div page-model="@Model.PageInfo" page-action="Index"
         page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-default"
         page-class-selected="btn-primary" class="btn-group">
    </div>
    <div class="text-center">
        <a asp-action="Create" class="btn btn-primary">
            Add New Category
        </a>
    </div>
</div>



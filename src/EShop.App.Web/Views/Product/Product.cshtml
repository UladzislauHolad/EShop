@model ProductViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input asp-for="ProductId" class="form-control" type="hidden" />
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" readonly="readonly"/>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price" class="control-label"></label>
    <input asp-for="Price" class="form-control" readonly="readonly"/>
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" readonly="readonly" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Count" class="control-label"></label>
    <input asp-for="Count" id="count" class="form-control" readonly="readonly"/>
    <span asp-validation-for="Count" class="text-danger"></span>
</div>
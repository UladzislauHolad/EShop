@model EShop.App.Web.Models.ProductListViewModel

@{
    ViewBag.Title = "ProductList";
    Layout = "_Layout";
}

<div class="col-md-10">
    <h3>Product List</h3>
    <table class="table table-striped">
        <thead>
            <tr><th>Name</th><th>Price</th><th>Description</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (EShop.App.Web.Models.ProductViewModel p in Model.Products)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                    <td>@p.Description</td>
                    <td>
                        <div class="btn-toolbar pull-right" role="toolbar">
                            <div class="btn-group" role="group"><a class="btn btn-warning" asp-action="Edit" asp-route-id="@p.ProductId"><span class="glyphicon glyphicon-pencil"></span></a></div>
                            <div class="btn-group" role="group"><a class="btn btn-danger" asp-action="Delete" asp-route-id="@p.ProductId"><span class="glyphicon glyphicon-trash"></span></a></div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div page-model="@Model.PageInfo" page-action="Index"
            page-classes-enabled="true"
            page-class="btn" page-class-normal="btn-default"
            page-class-selected="btn-primary" class="btn-group">
    </div>
    <div class="text-center">
        <a asp-action="AddProduct" class="btn btn-primary">
            Add New Product
        </a>
    </div>
</div>
    


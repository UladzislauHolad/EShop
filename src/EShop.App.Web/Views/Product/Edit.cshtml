@model EShop.App.Web.Models.ProductViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form asp-action="Edit" method="post">
    <h3>Edit Product</h3>
    <hr />
    <div class="col-md-4 category-select">
        <label asp-for="Categories" class="control-label"></label>
        @await Html.PartialAsync("Categories", Model.Categories)
        <div id="mselect">
        </div>
        <span asp-validation-for="CategoriesId" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="ProductId" class="form-control" type="hidden" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Count" class="control-label"></label>
            <input asp-for="Count" class="form-control" />
            <span asp-validation-for="Count" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>

<script>
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/Category/CategorySelect",
            success: function (response) {
                $("#mselect").append(response);
                enableSelect();
            }
        });
    });

    function enableSelect() {
        $('#my-select').searchableOptionList();
    }
</script>


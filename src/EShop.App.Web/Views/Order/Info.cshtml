@model OrderViewModel

@{
    ViewData["Title"] = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10">
        <h3>Customer</h3>
        @if (Model.Customer != null)
        {
        <ul class="list-group list-group-flush">
            <li class="list-group-item">First Name: @Model.Customer.FirstName</li>
            <li class="list-group-item">Last Name: @Model.Customer.LastName</li>
            <li class="list-group-item">Patronymic: @Model.Customer.Patronymic</li>
            <li class="list-group-item">Phone: @Model.Customer.Phone</li>
            <li class="list-group-item">Address: @Model.Customer.Address</li>
            <li class="list-group-item">Comment: @Model.Customer.Comment</li>
            <li class="list-group-item">Payment method: @(Model.PaymentMethod?.Name??"Not Exist")</li>
        </ul>
        }
        else
        {
            <p style="color:red"><i>Not Exist</i></p>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        <h3>Product List</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>OrderCount</th>
                    <th>Sum</th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal total = 0;
                    foreach (ProductOrderViewModel po in Model.ProductOrders)
                    {
                        total += (decimal)(po.OrderCount * po.Price);
                        <tr id="@po.ProductOrderId">
                            <td id="name">@po.Name</td>
                            <td id="price">@po.Price</td>
                            <td>@po.OrderCount</td>
                            <td>@(po.OrderCount * po.Price)</td>
                        </tr>
                    }
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>Total:@total</td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="text-center">
            <div class="btn-group">
                <a asp-controller="Order" asp-action="Index" class="btn btn-default">
                    Back To Order List
                </a>
            </div>
        </div>
    </div>
   
</div>

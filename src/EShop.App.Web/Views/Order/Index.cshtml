@model OrderListViewModel

@{
    ViewBag.Title = "OrderList";
    Layout = "_Layout";
}

<div class="col-md-10">
    <h3>Order List</h3>
    <table class="table table-striped">
        <thead>
            <tr>
            <th><a asp-action="Index" asp-route-sortOrder="@Model.IdSort">Id</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@Model.CustomerSort">Customer</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@Model.StatusSort">Status</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@Model.DateSort">Date</a></th>
            <th></th></tr>
        </thead>
        <tbody>
            @foreach (OrderViewModel order in Model.Orders)
            {
                <tr id="@order.OrderId">
                    <td>@order.OrderId</td>
                    <td>@order.Customer.FirstName @order.Customer.LastName @order.Customer.Patronymic</td>
                    @if (order.Status != "New")
                    {
                        <td style="color:green">@order.Status</td>
                        <td>@order.Date</td>
                        <td>
                            <div class="btn-toolbar pull-right" role="toolbar">
                                <div class="btn-group" role="group">
                                    @if (order.ButtonConfiguration != null)
                                    {
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-success" onclick='confirmAction("@order.ButtonConfiguration.ActionName", "@order.ButtonConfiguration.Url", "@order.ButtonConfiguration.HttpType", @order.OrderId)'>@order.ButtonConfiguration.ActionName</button>
                                        </div>
                                    }
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-info" asp-controller="Order" asp-action="Modify" asp-route-orderId="@order.OrderId"><span class="glyphicon glyphicon-info-sign"></span></a>
                                    </div>
                                </div>
                            </div>
                        </td>
                    }
                    else
                    {
                        <td style="color:red">Not Confirmed</td>
                        <td></td>
                        <td>
                            <div class="btn-toolbar pull-right" role="toolbar">
                                <div class="btn-group" role="group">
                                    @if (order.ButtonConfiguration != null)
                                    {
                                        <div class="btn-group" role="group"><button class="btn btn-success" onclick='confirmAction("@order.ButtonConfiguration.ActionName", "@order.ButtonConfiguration.Url", "@order.ButtonConfiguration.HttpType", @order.OrderId)'>@order.ButtonConfiguration.ActionName</button></div>
                                    }
                                    <div class="btn-group" role="group"><a class="btn btn-warning" asp-controller="Order" asp-action="Modify" asp-route-orderId="@order.OrderId"><span class="glyphicon glyphicon-pencil"></span></a></div>
                                    <div class="btn-group" role="group"><button class="btn btn-danger" onclick='confirmAction("Delete", "Orders/", "delete", @order.OrderId)'><span class="glyphicon glyphicon-trash"></span></button></div>
                                </div>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        <a asp-controller="Order" asp-action="Create" class="btn btn-primary">
            Add New Order
        </a>
    </div>
</div>


<div id="modal-confirm-window"></div>

<script>
    function confirmAction(actionName, url, httpType, _id) {
        var id = _id;
        $("#modal-confirm-window").dialog({
            modal: true,
            title: "Are you sure?",
            maxHeight: 300,
            maxWidth: 500,
            minWidth: 250,
            minHeight: 100,
            draggable: false,
            buttons: [
                {
                    text: actionName,
                    click: action
                },
                {
                    text: "Cancel",
                    click: cancel
                }
            ]
        });

        function action() {
            $.ajax({
                url: url + id,
                type: httpType,
                error: function (response) {
                    $("#modal-confirm-window").dialog("close");
                    customAlert("error", "Error!", response.responseText);
                },
                success: function () {
                    location.reload();
                }
            });
        }

        function cancel() {
            $("#modal-confirm-window").dialog("close");
        }
    }
</script>